---
import Layout from "@/layouts/Layout.astro"
import Button from "@/components/Button.astro"
import { getNamesProjects } from '@/utils/projectsNames.ts'

export function getStaticPaths(){  
  const namesProjects = getNamesProjects()
  return namesProjects.map((name) => ({
      params: {project: name}
    }))
}

const { project } = Astro.params
---

<Layout title={ project }>
  <iframe title={`${project}`}class="w-screen h-dvh" src={`/projects/${project}/index.html`}></iframe>
  <Button href="/" src="/back.svg" title="Volver" _class="absolute bottom-4 left-4 bg-[#1f1f1f]"/>
</Layout>
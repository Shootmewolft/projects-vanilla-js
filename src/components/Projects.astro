---
import projects from '@/projects.json'
console.log()
---

<section class="grid gap-8 grid-cols-3">
  {projects.map((project, index) => (
      <article class="flex flex-col gap-2">
        <a href={`/${project.slug}`} class="relative transition duration-500 hover:scale-110">
          <img src={project.image} alt="Imagen de proyecto" class="w-full object-cover rounded-[20px] h-full"/>
          <span class="hover:scale-[1.6] absolute text-2xl top-[10px] left-[10px] -rotate-[25deg] font-bold text-js transition duration-500">
            #{index + 1}
          </span>
        </a>
        <div class="flex flex-col gap-2">
          <a href={`/${project.slug}`} class="text-2xl transition duration-300 text-white font-semibold hover:text-css">
            {project.name}
          </a>
          <p class="opacity-70 font-light leading-[1.3]">
            {project.description}
          </p>
          <a href={project.github} target="_blank" class="flex py-[.2rem] px-4 text-white border border-white rounded-[10px] items-center bg-[#fff3] gap-2 w-fit hover:bg-[#fff6]">
            <img src="/github.svg" alt="GitHub Logo" class="w-8"/>
            GitHub
          </a>
        </div>
      </article>
  ))}
</section>

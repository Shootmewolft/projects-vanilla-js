---
import Button from "./Button.astro";
const { project } = Astro.props;
---

<article
  class="w-full flex flex-col gap-4 p-4 rounded-2xl border border-white/10 group  hover:bg-white/[0.01] hover:border-white/20 transition-colors duration-300"
>
  <div class="w-full h-72 rounded-lg overflow-hidden relative">
    <img
      src={project.image}
      alt={project.name}
      class="block w-full h-full object-cover group-hover:scale-110 duration-300"
    />
    <span
      class="group-hover:scale-125 absolute text-2xl top-[15px] left-[15px] -rotate-[25deg] font-bold text-js duration-300 cursor-default"
    >
      #{project.id}
    </span>
  </div>

  <div class="flex flex-col gap-2 grow text-white">
    <div class="w-full h-full flex flex-col">
      <h1
        class="text-2xl font-semibold duration-150 ease-linear mb-1 group-hover:text-css"
      >
        {project.name}
      </h1>

      <p class="text-white/70">
        {project.description}
      </p>
    </div>

    <div class="w-full grid grid-cols-2 gap-4">
      <Button src="/github.svg" title="GitHub" href={project.github} />
      <Button src="/search.svg" title="Ver" href={project.slug} />
    </div>
  </div>
</article>
